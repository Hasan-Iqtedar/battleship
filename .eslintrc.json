{
  "env": {
    "browser": true,
    "commonjs": true,
    "es2021": true
  },
  "extends": ["airbnb-base"],
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "rules": {
    "no-console": "off",
    "quotes": ["error", "single"],
    "no-undef": "off",
    "no-trailing-spaces": "warn",
    "indent": "warn",
    "class-methods-use-this": "off",
    "no-unused-vars": "warn",
    "consistent-return": "warn",
    "prefer-const": "warn",
    "no-plusplus": "warn"
  }
}
